{% extends 'NewsShowBundle:Default:index.html.twig' %}

{% block mainContent %}
    <div id="LoginBox">
        <form id="loginForm" action="{{ path('login_check') }}" method="post">

            <div>To login enter credentials below:</div>
            {% if error %}
                <div style="color:red">{{ error.message }}</div>
            {% endif %}

            <label for="username">Username:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" /> <br/>

            <label for="password">Password:</label>
            <input type="password" id="password" name="_password" />

            {#
                If you want to control the URL the user is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}

            <button type="submit">login</button>
        </form>

        {{ form(form, { 'id' : 'signupForm' }) }}


        <div style="clear:both;"></div>
    </div>

    <script type="text/javascript">

        $('#navLogin').css('background-color','#BF9004');

    </script>
{% endblock %}
