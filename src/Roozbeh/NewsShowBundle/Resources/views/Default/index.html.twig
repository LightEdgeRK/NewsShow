<!DOCTYPE html>
<html>

<head>
    <title>News Show</title>
	{% block stylesheets %}
    <link href="{{ asset('bundles/newsshow/css/design.css') }}" rel="stylesheet" type="text/css"  >
	{% endblock %}
</head>

<body>
    {% block javascripts %}
	<script src="{{ asset('bundles/newsshow/js/jquery-1.9.1.min.js') }}" type="text/javascript"></script>
	<script src="{{ asset('bundles/newsshow/js/jquery.masonry.min.js') }}" type="text/javascript"></script>
    {% endblock %}

	<div id="main">
		<div id="navBar">
            {% block navBar %}
                <div class="navItem" id="navMain" onclick="navigate(1)"> Main </div>
                <div class="navItem" id="navSearch" onclick="navigate(2)"> Search </div>
                {% if is_granted('ROLE_USER') or is_granted('ROLE_ADMIN') %}
                    <div class="navItem" id="navWriteNews" onclick="navigate(4)" > Write News </div>

                    <div class="navItem" id="navSignOut" onclick="navigate(5)" > Sign Out </div>
                    <div class="navItem" id="navWelcome"> Welcome {{ app.user.username }} </div>

                {%  else %}
                    <div class="navItem" id="navLogin" onclick="navigate(3)" > Register/Login </div>
                {% endif %}

            {% endblock %}
			<div style="clear:both;"> </div>
		</div>
		
		<div id="mainContent">
            {% block mainContent %}

            {% endblock %}
		</div>

	</div>

    <script type="text/javascript">

        function navigate(a)
        {
            location.href = a==1 ? "news" : a==2 ? 'search' : a==3 ? 'login' : a==4 ? 'write' : a==5 ? 'logout' : "login";
        }

    </script>

</body>
</html>
